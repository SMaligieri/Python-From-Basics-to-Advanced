# Exercício 48
seg = int(input("Digite o valor em segundos: "))
horas = int(seg / 3600)
minutos = int(int(seg % 3600) / 60)
segundos = int(seg % 3600) % 60
print("hora(s):", horas, ";", "minutos:", minutos, "segundos:", segundos)

# Exercício 49
horarioinicio_hora = int(input("Digite a hora de início: "))
horarioinicio_minutos = int(input("Digite os minutos: "))
horarioinicio_segundos = int(input("Digite os segundos: "))
print("Horátio de início: ", horarioinicio_hora, "hora", horarioinicio_minutos, "minutos", horarioinicio_segundos, "segundos")


seg = int(input("Digite a duração da experiência em segundos: "))
horas = int(seg / 3600)
minutos = int(int(seg % 3600) / 60)
segundos = int(seg % 3600) % 60


print("Duração: ", "hora(s):", horas, ";", "minutos:", minutos, "segundos:", segundos)

hsf = horarioinicio_segundos + segundos
hmf = horarioinicio_minutos + minutos
hhf = horarioinicio_hora + horas

if hsf >= 60:
        hsf = hsf - 60
        hmf = hmf + 1
elif hmf >= 60:
        hmf = hmf - 60
        hhf = hhf + 1
else:
    pass


print("Término: ", hhf, "horas", hmf, "minutos", hsf, "segundos")


# Exercício 51
x1 = 0.0
y1 = 0.0
 
x2 = float(input('Informe a coordenada X: '))
y2 = float(input('Informe a coordenada y: '))
 
r = (((x1 - x2) ** 2) + ((y1 - y2) ** 2)) ** 0.5
 
print(f'A distância é {r}')

# Exercício 52
aposta1 = int(input("Insira o valor da aposta 1: "))
aposta2 = int(input("Insira o valor da aposta 2: "))
aposta3 = int(input("Insira o valor da aposta 3: "))
premio = int(input("Insira o valor do prêmio: "))
premio1 = aposta1 / (aposta1 + aposta2 + aposta3)*premio
premio2 = aposta2 / (aposta1 + aposta2 + aposta3)*premio
premio3 = aposta3 / (aposta1 + aposta2 + aposta3)*premio

print("O jogador 1 recebe: ", premio1)
print("O jogador 2 recebe: ", premio2)
print("O jogador 3 recebe: ", premio3)

# Exercício 53
c = float(input("Coloque o comprimento do terreno(em metros): "))
l = float(input("Coloque a largura do terreno (em metros): "))
per = c + c + l + l
print("Você vai precisar de", per, "metros de tela")

p = float(input("Coloque o preço do metro de tela: "))
print("Isso vai custar", p * per, "reais")




